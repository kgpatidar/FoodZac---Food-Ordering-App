<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/customebackground"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="#FCF8F8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotelimagedescribtion"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:padding="10dp"
                    android:background="@drawable/edittextbackground"
                    android:src="@drawable/restimage1"></ImageView>

                <TextView
                    android:id="@+id/hotelnameincustome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Jimo ji Restaurants"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/descriptionofhotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:text="Pure Veg, Indian and Fast Food"
                    android:textFontWeight="600"
                    android:textSize="17dp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/timingofhotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#D6D3D3"
                        android:padding="3dp"
                        android:text="Timing : 10:00 AM - 11:00 PM"
                        android:textColor="@android:color/black"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/ratingofhotelincustome"
                        android:padding="5dp"
                        android:src="@drawable/ic_star_black_24dp"></ImageView>

                    <TextView
                        android:id="@+id/ratingofhotelincustome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:padding="3dp"
                        android:text="3.7(500+)"></TextView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>